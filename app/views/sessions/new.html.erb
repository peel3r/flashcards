<div class="user-entry-form">
  <h1 class="title"> Log in </h1>
  <%= form_for(:session, url: login_path) do |f| %>

    <!-- FAKE INPUTS TO PREVENT CHROME AUTOFILL -->
    <%= f.email_field :fake1, name: "prevent autofill", class: "hidden" %>
    <%= f.password_field :fake2, name: "prevent autofill", class: "hidden" %>

    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Email", class: "field-break", :autocomplete => :off%>

    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password", class: "field-break" %>

    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>

    <%= f.submit "Log in", class: "create-account-button" %>
  <% end %>
  <p>New user? <%= link_to 'Sign up now!', signup_path, class: "light-link" %></p>
</div>
