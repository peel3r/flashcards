<div class="new_deck_form_holder">
  <h1 class="title"> New Deck </h1>
  <%= form_for [@user, @deck], url: user_flashcard_decks_path do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 8 %>

    <%= f.submit "Create Deck", class: "create_deck_button" %>
  <% end %>
</div>
